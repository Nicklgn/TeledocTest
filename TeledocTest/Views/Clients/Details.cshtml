@model TeledocTest.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Информация о клиенте</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
    </dl>
    <h4>
        @Html.DisplayNameFor(model => model.Founders)
    </h4>
    <ul>
        @foreach (Founder f in Model.Founders)
        {
            <li>@f.FullName</li>
        }
    </ul>
</div>
<div>
    @if (Model.Type == "Индивидуальный предприниматель")
    {
        <a asp-action="EditIP" asp-route-id="@Model.Id">Изменить</a> 
    }
    else 
    { 
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>   
    }
    | <a asp-action="Index">Вернуться к списку клиентов</a>
</div>
