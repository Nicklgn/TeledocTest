@model TeledocTest.Models.Client

@{
    ViewData["Title"] = "EditIP";
}

<h1>Изменение ИП</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <h3>@Model.Name</h3>
        <form asp-action="EditIP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Inn" class="form-control" />
                <span asp-validation-for="Inn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UpdateDate" class="form-control" />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <h5>Выберите учредителя</h5>
            <select name="selectedFounders">
                @foreach (var f in ViewBag.AllFounders)
                {
                    @if (Model.Founders.Contains(f))
                    {
                        <option selected value=@f.Id.ToString()>@f.FullName</option>
                    }
                    else
                    {
                        <option value=@f.Id.ToString()>@f.FullName</option>
                    }
                }
            </select>
            <p>Изменение учредителя повлечет изменение всех аттрибутов ИП. Возможно, Вам стоит создать новый ИП.</p>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку клиентов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
