@model IEnumerable<TeledocTest.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Список клиентов</h1>

<p>
    <a asp-action="Create">Создать новое юр. лицо</a> |
    <a asp-action="CreateIP">Создать новый ИП</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inn)
            </td>
            <td>
                @if (item.Type == "Индивидуальный предприниматель")
                {
                    <a class="btn btn-primary" asp-action="EditIP" asp-route-id="@item.Id">Изменить</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                }
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Информация</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
